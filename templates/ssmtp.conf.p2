#
# /etc/ssmtp.conf -- a config file for sSMTP sendmail.
#

Root={{ ssmtp_root }}
RewriteDomain={{ ssmtp_rewrite_domain }}
Mailhub={{ ssmtp_mailhub }}
Hostname={{ ansible_fqdn }}
UseSTARTTLS={{ ssmtp_use_starttls }}
UseTLS={{ ssmtp_use_tls }}
{% if ssmtp_auth_user %}AuthUser={{ ssmtp_auth_user }}{% endif %}
{% if ssmtp_auth_pass %}AuthPass={{ ssmtp_auth_pass }}{% endif %}
